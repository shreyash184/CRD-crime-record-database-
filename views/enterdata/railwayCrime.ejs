<% include ../../partials/header.ejs %>

<div class="container">
    <form action="/railway" method="POST">
        <div class="form-group">
            <h3>case no</h3>
            <label for="case_no">case no</label>
            <input class="form-control" type="number" name="case_no" required>
        </div>

        <div class="form-group">
            <label for="status">Train's status</label>
            <input type="text" class="form-control" name="tStatus" aria-describedby="emailHelp" placeholder="Enter the train's status">
        </div>
        <div class="form-group">
            <label for="No">Train No</label>
            <input type="number" class="form-control" name="trainNo" aria-describedby="emailHelp" placeholder="Enter Train number">
        </div>
        <div class="form-group">
            <label for="stolen">Stolen Stuff</label>
            <input type="text" class="form-control" name="stolen" aria-describedby="emailHelp" placeholder="Provide stolen stuff">
        </div>
        <div class="form-group">
            <label for="victim_details">Victim details</label>
            <input type="text" class="form-control" name="victim" aria-describedby="emailHelp" placeholder="Enter Victim's name">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

