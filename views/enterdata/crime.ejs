<div class="container center">
	<h1>Enter the data of Crime Record</h1>
	<form action="/crime-records" method="POST">
		<div class="form-group">
			<label for="pin" class="location">Pin Code</label>
			<input class="form-control" id="" type="number" name="pin" required>
		</div>
		<div class="form-group">
			<label for="village" class="location">Village</label>
			<input class="form-control" id="" type="text" name="village" required>
		</div>
		<div class="form-group">
			<label for="taluka" class="location">Taluka</label>
			<input class="form-control" id="" type="text" name="taluka" required>
		</div>
		<div class="form-group">
			<label for="district" class="location">District</label>
			<input class="form-control" id="" type="text" name="district" required>
		</div>
		<div class="form-group">
			<label for="address" class="location">Local Address</label>
			<input class="form-control" id="" type="text" name="address" required>
		</div>

		<div class="form-group">
			<label for="Catagory">Catagory of crime</label>
			<select class="form-control" id="Cat" name="Catagory">
				<option>Theft</option>
				<option>Murder</option>
				<option>Railway crime</option>
				<option>Lost person</option>
				<option>Accident</option>
				<option>Smuggling</option>
			</select>

		</div>
		<div class="form-group">
			<h3>Case No</h3>
			<label for="case_no">Case no</label>
			<input class="form-control" type="number" name="case_no">
		</div>
		<div class="form-group">
			<h3>Criminal_id</h3>
			<label for="criminal_id">Criminal_id</label>
			<input class="form-control" type="number" name="criminal_id">
		</div>
		<div class="form-group">
			<h3>Time of crime</h3>
			<label for="time">Time of crime</label>
			<input class="form-control" type="number" name="Time">
		</div>

		<div class="form-group">
			<h3>Time of registration</h3>
			<label for="rtime">Time of registration</label>
			<input class="form-control" type="number" name="RTime">
		</div>


		<div class="form-group">
			<h3>Date</h3>
